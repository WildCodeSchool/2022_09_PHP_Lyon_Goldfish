<form method="post" aria-describedby="formulaire ajout de lieux">
	<input type="hidden" value="{{ artist.id }}" name="id">
	<div class="addvenues row justify-content-center form-floating my-2">
		<div class="col-10 col-sm-8 col-md-6 col-xl-4">
			{% for error in errors %}
				<div class="mb-3 alert alert-danger alert-dismissible fade show" role="alert">
					{{ error }}
					<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
				</div>
			{% endfor %}
			<div class="mb-3 mt-3 form-label">
				<label for="hall">Salle</label>
				<input class="form-control" type="text" value="{{ venue.hall }}" name="hall" id="hall" aria-describedby="champ nom de la salle
														" placeholder="Rentrez un nom de salle" required>
			</div>
			<div class="mb-3 form-label">
				<label for="city">Ville</label>
				<input class="form-control" type="text" value="{{ venue.city }}" name="city" id="city" aria-describedby="champ ville" placeholder="Rentrez ville" required>
			</div>
			<div class="mb-3 form-label">
				<label for="image">Entre une URL d'image</label>
				<input class="form-control" type="text" value="{{ venue.image }}" name="image" id="image" placeholder="url" aria-describedby="ajout d'une photo via une url" required>
			</div>
			<div class="mb-3 text-center">
				<button class="btn btn-primary" aria-describedby="boutton soumettre">Soumettre</button>
			</div>
		</div>
	</div>
</form>
