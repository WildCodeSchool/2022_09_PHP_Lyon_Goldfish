{% extends 'layout.html.twig' %}

{% block classBody %}indexBackground
{% endblock %}
{% block title %}Connexion
{% endblock %}

{% block content %}
	<div class="row justify-content-center align-items-center form-floating my-2">
		<div class="col-10 col-sm-8 col-md-6 col-xl-4">
			<form method="post">
				<div>
					<label for="email" class="form-label text-light">Email</label>
					<input type="email" class="form-control" id="email" name="email">
				</div>
				<div>
					<label for="password" class="form-label text-light">Password</label>
					<input type="password" class="form-control" id="password" name="password">
				</div>
				<p class="text-light">Vous n'avez pas de compte ? Inscrivez-vous !
					<a class="link-danger" href="/register">Register</a>
				</p>
				<button type="submit" class="btn btn-danger btn-md mb-5 d-flex justify-content-center">Connexion</button>
			</form>
		</div>
	</div>
{%  endblock %}
