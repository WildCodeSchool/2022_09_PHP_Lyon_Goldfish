{% extends 'layout.html.twig' %}

{% block classBody %}indexBackground
{% endblock %}

{% block content %}
	<main class="container">
		<div class="row justify-content-center align-items-center form-floating my-2">
			<div class="loginform col-10 col-sm-8 col-md-6 col-xl-4 mt-5 rounded-4">
				<form method="post">
					<div>
						<label for="email" class="form-label text-light m-2">Email</label>
						<input type="email" class="form-control mb-2" id="email" name="email">
					</div>
					<div>
						<label for="password" class="form-label text-light">Mot de passe</label>
						<input type="password" class="form-control mb-2" id="password" name="password">
					</div>
					<div class="text-center">
						<button type="submit" class="btn btn-danger btn-md m-2">Connexion</button>
					</div>
					<p class="text-light">Vous n'avez pas de compte ?
						<a class="link-light" href="/register">Inscrivez-vous !</a>
					</p>
				</form>
			</div>
		</div>
	</main>
{%  endblock %}
